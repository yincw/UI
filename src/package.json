{
    "name": "ui",
    "description": "UI开发平台-项目源码管理工具",
    "version": "1.5.1",
    "main": "app/index.html",
    "window": {
        "width": 1100,
        "height": 640,
        "icon": "app/resources/images/ui.png",
        "title": "UI开发平台",
        "frame": false,
        "toolbar": false,
        "resizable": false,
        "transparent": false
    },
    "webkit": {
        "plugin": true
    },
    "js-flags": "debug",
    "ui": {
        "folder": ".ui",
        "createOption": {
            "module": ".ui/create.module.json",
            "project": ".ui/create.project.json"
        },
        "gruntOption": {
            "module": ".ui/module.json",
            "project": ".ui/project.json"
        }
    },
    "scripts": {
        "prestart": "npm install",
        "start": "gulp release",
        "poststart": "cd dist && npm install && cd gruntBuildFolder && npm install --production"
    },
    "dependencies": {
        "gulp": "^3.9.0",

        "grunt": "^0.4.5",
        "fs-extra": "^0.20.0",
        "bluebird": "^2.9.34",
        "mkdirp": "^0.5.1",
        "rimraf": "^2.4.2",
        "underscore": "^1.8.3"
    }
}
